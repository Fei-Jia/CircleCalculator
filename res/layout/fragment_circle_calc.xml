				android:text="acos"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:scaleType="fitXY"
				android:background="@drawable/round_red"
				android:textSize="25sp"
				android:id="@+id/ButtonAcos"
				android:onClick="OnNumClick"/>

		</LinearLayout>

