				android:id="@+id/ButtonFact"
				android:onClick="OnNumClick"/>
			
			<Button
				android:layout_height="match_parent"
				android:text="."
				android:layout_width="0dp"
				android:layout_weight="1"
				android:background="@drawable/round_yellow"
				android:scaleType="fitXY"
