<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_height="0dp"
		android:layout_weight="1.0"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:layout_gravity="right">

			<EditText
				android:id="@+id/EquationView"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:layout_width="match_parent"
				android:text=" "
				android:layout_gravity="right"
				android:gravity="left"
				android:textSize="28sp"
				android:background="@android:drawable/editbox_background_normal"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_height="45dp"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<TextView
		    android:id="@+id/ResultEqual"
			android:layout_height="33sp"
			android:text=" "
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:textSize="33sp"
			android:layout_gravity="bottom|right"
			android:onClick="OnNumClick"
			android:clickable="true"/>

		<TextView
			android:id="@+id/ResultsView"
			android:layout_height="wrap_content"
			android:text=""
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:textSize="33sp"
			android:layout_gravity="bottom|right"
			android:gravity="top|right"
			android:onClick="OnNumClick"
			android:clickable="true"/>

	</LinearLayout>

	<LinearLayout
	    android:id="@+id/Normal"
		android:layout_height="320dp"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:padding="3dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="horizontal">

			<Button
				android:layout_height="match_parent"
				android:text="("
				android:layout_width="0dp"
				android:layout_weight="1"
				android:background="@drawable/round_purple"
				android:scaleType="fitXY"
				android:textSize="40sp"
				android:id="@+id/ButtonParS"
				android:onClick="OnNumClick"/>

			<Button
				android:layout_height="match_parent"
				android:text=")"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:background="@drawable/round_purple"
				android:scaleType="fitXY"
				android:textSize="40sp"
				android:id="@+id/ButtonParF"
				android:onClick="OnNumClick"/>

			<Button
				android:layout_height="match_parent"
				android:text="^"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:scaleType="fitXY"
				android:background="@drawable/round_green"
				android:textSize="40sp"
				android:id="@+id/ButtonPower"
				android:onClick="OnNumClick"/>

			<Button
				android:layout_height="match_parent"
				android:text="AC"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:background="@drawable/round_purple"
				android:scaleType="fitXY"
				android:textSize="38sp"
				android:id="@+id/ButtonClear"
				android:onClick="OnClearClick"/>
			
			<ImageButton
				android:layout_height="match_parent"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:scaleType="fitCenter"
				android:background="@drawable/round_purple_back"	
                android:id="@+id/ButtonDel"
				android:onClick="OnNumClick"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="horizontal">

			
			<ImageButton
				android:layout_height="match_parent"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:background="@drawable/round_purple_up"
				android:id="@+id/ButtonShift"
				android:onClick="Shift"/>

			<Button
				android:layout_height="match_parent"
				android:text="7"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:background="@drawable/round_blue"
				android:scaleType="fitXY"
				android:textSize="45sp"
				android:id="@+id/ButtonN7"
				android:onClick="OnNumClick"/>

			<Button
				android:layout_height="match_parent"
				android:text="8"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:background="@drawable/round_blue"
				android:scaleType="fitXY"
				android:textSize="45sp"
				android:id="@+id/ButtonN8"
